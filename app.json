{
  "name": "Sinatra OAuthed Template",
  "description": "Sinatra app with authentication",
  "repository": "https://github.com/sethherr/sinatra_oauthed_template",
  "keywords": [
    "ruby",
    "sinatra",
    "oauth2",
    "warden",
    "grape-doorkeeper"
  ],
  "env": {
    "CUSTOM_RUBY_VERSION": "2.2.2",
    "DEFAULT_TITLE": "Demo app",
    "APPLICATION_CLIENT_ID": "client id from the OAuth provider. REQUIRED",
    "APPLICATION_CLIENT_SECRET": "client secret, from the OAuth provider. REQUIRED",
    "APPLICATION_SCOPES_REQUESTED": "public",
    "OAUTH_BASE_URL": "OAuth provider base url. REQUIRED",
    "API_BASE_URL": "API Base url - ALSO REQUIRED",
    "OAUTHED_VERIFIER_SECRET": "Something random",
    "USER_ATTRIBUTES": "id full_name email"
  }
}
